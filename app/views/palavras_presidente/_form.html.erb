<div class="row">
	<div class="col-lg-6">
      <%= render partial: 'layouts/form_errors', locals: {model: @palavra} %>
		<div class="box box-success">
			<%= form_for @palavra do |f| %>
				<div class="box-body">
					<div class="row">
						<div class="col-lg-12">
							<div class="form-group">
								<%= f.label 'Descrição', class: 'main-color uppercase' %>
								<%= f.text_area :description, class: 'form-control', style: 'resize: none;', rows: '4', value: (@palavra.description if @palavra.description.present?) %>
							</div>
						</div>
					</div>
					<div class="box-footer">
				        <%= f.submit action_name == 'edit' ? 'Atualizar' : 'Cadastrar', class: 'btn btn-success btn-flat', role: 'button' %>
				        <%= link_to 'Voltar', palavras_presidente_path, class: 'btn btn-danger btn-flat', role: 'button' %>
			    	</div>
			<% end %>
		</div>
	</div>
</div>