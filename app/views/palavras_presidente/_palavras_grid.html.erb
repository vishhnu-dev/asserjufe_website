<%=  grid(@palavra) do |g|

	g.blank_slate  do content_tag :div, "Nenhum registro encontrado", class: 'well' end

	g.column name: 'Descrição'do |palavra|
		palavra.description
	end

	g.column do |palavra|
		if policy(PalavraPresidente).edit?
			link_to edit_palavra_presidente_path(palavra), data: { toggle: "tooltip", placement: "left", title: "Editar" } do
	          	fa_icon 'pencil', style: 'font-size:20px; line-height: 3.7;', class: 'main-color'
	      	end
	    end
	end
 end %>
