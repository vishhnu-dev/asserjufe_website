<%= grid(@usuarios_grid) do |g|

	g.column name: 'Email', attribute: 'email' do |usuario|
		usuario.email
	end

	g.column name: 'Permissão', attribute: 'role', custom_filter: options_for_role, auto_reload: true do |usuario|
		usuario.role.humanize
	end

	g.column name: 'Nome completo', attribute: 'nome_completo' do |usuario|
		usuario.nome_completo if usuario.nome_completo.present?
	end

	g.column name: 'Data de Nacimento' do |usuario|
		usuario.data_nascimento.strftime('%m/%d/%Y') if usuario.data_nascimento.present?
	end

	g.column name: 'Idade' do |usuario|
		usuario.idade if usuario.data_nascimento.present?
	end

	g.column name: 'Criado em:' do |usuario|
		usuario.created_at.strftime('%d/%m/%Y')
	end
end %>