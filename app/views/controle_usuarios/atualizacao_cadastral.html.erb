<div class="row">
	<div class="col-lg-6">
		<div class="box box-success">
			<%= form_for @usuario, url: usuarios_path(@usuario).gsub(".","/") do |f| %>
				<div class="box-body">
					<div class="row">
						<div class="col-lg-6">
							<div class="form-group">
								<%= f.label 'Email' %><span class="text-danger">*</span>
								<%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control uppercase', disabled: (!@usuario.new_record?) %>
							</div>
						</div>
						<div class="col-lg-6">
							<div class="form-group">
								<%= f.label 'Nome completo' %><span class="text-danger">*</span>
								<%= f.text_field :nome_completo, class: 'form-control' %>
							</div>
						</div>
						<div class="col-lg-6">
							<div class="form-group">
								<%= f.label 'Data de nascimento' %><span class="text-danger">*</span>
								 <div class="input-group date" id='datetimepicker1'>
					               <%= f.text_field :data_nascimento, class: 'form-control datepicker date_time', 'aria-describedby': 'basic-addon-date' %>
					               <span class="input-group-addon">
                           			<span class="fa fa-calendar"></span>
					            </div>
							</div>
						</div>
					</div>
				</div>
				<div class="box-footer">
			        <%= f.submit "Atualizar Informações", class: 'btn btn-success btn-flat', role: 'button' %>
		    	</div>
    		<% end %>
		</div>
	</div>
</div><%= abort %>