<div class="row">
  <div class="col-lg-6">
    <div class="box box-success">
      <div class="box-body">
        <%= form_for(resource, as: resource_name, url: update_usuario_registration_path, method: :put ) do |f| %>
          <div class="col-lg-12">
            <div class="form-group has-feedback">
              <%= f.label 'Nova senha' %><br />
              <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', id: 'f_user_1' %>
              <% if @minimum_password_length %>
                <em>Entre com no m√≠nimo <%= @minimum_password_length %> caracteres</em>
              <% end %>
            </div>
          </div>

          <div class="col-lg-12">
            <div class="form-group has-feedback">
              <%= f.label 'Confirmar nova senha' %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', id: 'f_user_2' %>
            </div>
          </div>

          <div class="col-lg-12">
            <div class="form-group has-feedback">
              <%= f.label 'Senha atual' %>
              <%= f.password_field :current_password, autocomplete: "current-password", class: 'form-control', id: 'f_user_3' %>
            </div>
          </div>

          <div class="col-lg-12">
            <div class="box-footer">
              <%= f.submit 'Alterar', class: 'btn btn-success btn-flat', role: 'button', id: 'btn-user-sub' %>
              <%= link_to 'Voltar', :back, class: 'btn btn-danger btn-flat', role: 'button' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script>
  $(document).ready(function(){
    $('body').on('change keyup', '#f_user_1, #f_user_2, #f_user_3', function() {
      let pwd = document.getElementById('f_user_1').value
      let pwd_confirmation = document.getElementById('f_user_2').value
      let current = document.getElementById('f_user_3').value
      if (pwd!='' && pwd_confirmation!='' && current!='') {
        $('#btn-user-sub').prop('disabled',false);
      } else {
        $('#btn-user-sub').prop('disabled',true);
      }
    });
  });
</script>