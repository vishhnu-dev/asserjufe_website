<%= form_for @contato, :url => {:controller => "contatos", :action => "create" } do |f| %>

	<div class="row">
	    <div class="col-md-12">
	      <%= render partial: 'layouts/messages' %>
	    </div>
  	</div>
	<div class="row contatos-form">
		<div class="col-md-6">
		  <div class="form-group">
		    <label>Nome completo</label>
		    <%= f.text_field :nome, class: 'form-control captalize' %>
		  </div>
		</div>
		<div class="col-xs-6 col-md-6">
		  <div class="form-group">
		    <label>E-mail</label>
		    <%= f.email_field :email, class: 'form-control' %>                                  
		  </div>
		</div>
		<div class="col-xs-6 col-md-6">
		  <div class="form-group">
		    <label>Telefone</label>
		    <%= f.text_field :telefone, class: 'form-control phone_with_ddd' %>
		  </div>
		</div>
		<div class="col-xs-12 col-md-6">
		  <div class="form-group">
		    <label>Assunto</label>
		    <%= f.text_field :assunto, class: 'form-control' %>
		  </div>
		</div>
		<div class="col-xs-12">
		  <div class="form-group">
		    <label>Mensagem</label>
		    <%= f.text_area :mensagem, class: 'form-control area', rows: '6' %>
		  </div>
		</div>
	    <div class="col-md-6 col-md-offset-3">
			<div class="form-group button">                 
				<%= invisible_recaptcha_tags text: 'Enviar', class: 'btn btn-success btn-block' %>
			</div>
	    </div>
	</div>
<% end %>