<header class="main-header">
  <a href="<%# root_path %>" class="logo">
    <div class="logo-mini"></div>
    <div class="logo-lg"></div>
  </a>

  <nav class="navbar navbar-static-top">
    <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
      <span class="sr-only">Toggle navigation</span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </a>
    <div class="navbar-custom-menu">
      <ul class="nav navbar-nav">
        
        <%# if current_usuario.mestre? %>
          <li>
            <a title="Cadastrar Usuário" data-placement="bottom" href="/usuarios/novo" data-toggle="tooltip" data-original-title="Cadastrar Usuário"><i class="fa fa-user"></i> <span class="label">+</span></a>
          </li>
          &nbsp;
        <%# else %>
          <li>
            <a title="Cadastrar Solicitação" data-placement="bottom" href="<%# new_solicitacao_path %>" data-toggle="tooltip" data-original-title="Cadastrar Solicitacao"><i class="fa fa-bell"></i> <span class="label">+</span></a>
          </li>
          &nbsp;
        <%# end %>

        <li class="dropdown notifications-menu">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <span class="hidden-xs"></span>
            <%# current_usuario.email %>
          </a>
          <ul class="dropdown-menu" style="width: auto;">
            <li>
              <ul class="menu">
                <li>
                  <%# link_to edit_usuario_registration_path do %>
                      <i class="fa fa-unlock-alt"></i>Alterar senha
                    <% end %>
                </li>
                <li>
                  <%# link_to destroy_usuario_session_path, :method => 'delete'  do %>
                      <i class="fa fa-sign-out"></i>Sair
                    <% end %>
                </li>
              </ul>
            </li>
          </ul>
        </li>
      </ul>
    </div>
  </nav>
</header>
